<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="533.0" prefWidth="505.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.studentmanager.HelloController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <TableView fx:id="tableView" prefHeight="200">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="108.79998910427094" text="ID" />
            <TableColumn fx:id="nameColumn" prefWidth="123.20001983642578" text="Name" />
            <TableColumn fx:id="emailColumn" prefWidth="123.19993591308594" text="Email" />
            <TableColumn fx:id="majorColumn" prefWidth="127.99993896484375" text="Major" />
        </columns>
    </TableView>

    <TextField fx:id="idField" promptText="ID" />
    <TextField fx:id="nameField" promptText="Name" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="majorField" promptText="Major" />

    <Button onAction="#handleAdd" text="Add" />
    <Button onAction="#handleUpdate" text="Update" />
    <Button onAction="#handleDelete" text="Delete" />
</VBox>
